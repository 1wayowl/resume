<section>
    <div class="col-12 mb-5">

        {{#each goodsBlock}}
        <div class="card p-2 pt-3 gy-2">
            <div class="row">
                <div class="col-2 ">
                    <img src="https://picsum.photos/110/110" alt="product photo" width="110" height="110">
                </div>
                <div class="col-4">
                    <h5>{{name}}</h5>
                    <p>{{description}} </p>
                </div>
                <div class="col-2">
                    {{#with price}}
                    {{title}} : <h4>{{value}}</h4>
                    {{/with}}
                </div>

                <div class="col-2"> {{amount}} </div>

                <div class="col-2 pt-2">
                    {{#each buttons}}
                    <div><button class="btn mb-3   
                    {{#if isPrimary}}btn-primary text-light{{/if}}
                    {{#if isDanger}}btn-outline-danger{{/if}} ">
                            {{text}}</button>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</section>