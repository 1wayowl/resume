{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <h1>{{name}}</h1>
    <p>{{description}} </p>
    <div>{{price}} $ ( {{category}} )</div>

    <div>
        <ul>
            {{#with features}}
            {{> title data='Features' big=true}}

            {{#with processor}}
            <li>
                <span class="h4"> Processor: </span>{{brand}} {{model}} {{speed}} {{cores}} {{cache}}
            </li>
            {{/with}}
        </ul>

        <hr>

        <ul>
            <li>
                {{#with memory}}
                <span class="h4"> Memory: </span> {{type}} {{size}} {{speed}}
                {{/with}}
            </li>

            <li>{{#with storage}}
                <span class="h4"> Type: </span> {{type}} ( {{size}})
                {{/with}}
            </li>

            <li> {{#with display}}
                <span class="h4"> Display: </span>{{size}} (Resolution {{resolution}}) {{technology}} {{color_space}}
                {{brightness}} {{refresh_rate}}
                {{/with}}
            </li>

            <li>{{#with graphics}}
                <span class="h4"> Graphics: </span> Brand: {{brand}} - {{model}} {{memory}}
                {{/with}}
            </li>

            <li><span class="h4"> Ports: </span>
                {{#each ports}}
                <ul>
                    <li> {{type}} ({{count}})</li>
                    {{#each features}}
                    <ul>- {{''}}</ul>
                    {{/each}}
                </ul>
                {{/each}}
            </li>

            <li> {{#with battery}}
                <span class="h4"> Battery: </span>{{type}} ({{capacity}}) {{life}}
                {{/with}}
            </li>

            <li><span class="h4">Weight: </span>{{weight}} </li>

            <li>{{#with dimensions}}
                <span class="h4"> Dimensions: </span>{{height}} * {{width}} * {{depth}}
                {{/with}}
            </li>

            <li><span class="h4">Operating_system: </span>{{operating_system}} </li>

            <li><span class="h4"> Accessories: </span>
                {{#each accessories}}
                <ul> {{name}} - {{price}} $ </ul>
                {{/each}}
            </li>
        </ul>

        {{/with}}
    </div>



