<main class="p-5">

    <div class="row g-5">
        <div class="col-8 mb-5">

            <h1 class="mb-5">{{header}} </h1>

            {{#with contacts_data}}


            <h3> {{title}}</h3>

            {{#each buttons}}
            <button
                class="btn btn-lg {{#if isPrimary}} btn-warning text-light{{/if}} {{#if isOutline}}btn-outline-warning{{/if}} ">{{text}}
            </button>
            {{/each}}

            {{#with form}}
            {{#with input}}
            <div class="row">
                {{#with surname}}
                <div class="col-4 mb-5">
                    <label class="form-label">{{label}} </label>
                    <input placeholder="{{placeholder}}" class="form-control form-control-lg ">
                    <div class="form-text ">{{caption}}</caption>
                    </div>
                </div>
                {{/with}}
                {{#with name}}
                <div class="col-4 mb-5">
                    <label class="form-label">{{label}} </label>
                    <input placeholder="{{placeholder}}" class="form-control form-control-lg ">
                    <div class="form-text ">{{caption}}</caption>
                    </div>
                </div>
                {{/with}}
            </div>
            <div class="row">
                {{#with phone}}
                <div class="col-4 mb-5">
                    <label class="form-label">{{label}} </label>
                    <input placeholder="{{placeholder}}" class="form-control form-control-lg ">
                    <div class="form-text ">{{caption}}</caption>
                    </div>
                </div>
                {{/with}}
                {{#with email}}
                <div class="col-4 mb-5">
                    <label class="form-label">{{label}} </label>
                    <input placeholder="{{placeholder}}" class="form-control form-control-lg ">
                    <div class="form-text ">{{caption}}</caption>
                    </div>
                </div>
                {{/with}}
            </div>
            {{/with}}


            <div>
                <hr>
            </div>

            <div class="col-8 mb-2">
                {{#each switch}}
                <div class="form-check form-switch mb-5">
                    <label class="form-check-label ">{{text}}</label>
                    <input name="name" type="checkbox" class="form-check-input">
                </div>
                {{/each}}
            </div>
            {{/with}}

            {{/with}}

        </div>


        <div class="row">
            <div class="col-4 mb-3">
                <div class="card p-2">

                    {{#each action_block}}
                    <button class="btn btn-lg mb-2
                {{#if isSuccess}}btn-success text-light{{/if}} 
                {{#if isDanger}}btn-danger{{/if}} 
                {{#if isInfo}}btn-info text-light{{/if}}">{{text}}
                    </button>
                    {{/each}}

                </div>
            </div>

            <div class="row">
                <div class="col-4 mb-2">
                    <div class="card p-2">
                        {{#with total}}
                        <h3>{{title}} </h3>

                        <div class="list-group-item mb-2">
                            {{#each item_list}}
                            <div> {{name}}: {{price}} </div>
                            {{/each}}
                        </div>
                        <hr>
                        <div class="list-group-item mb-2">
                            {{#each additional_info}}
                            <div> {{text}}: {{value}} </div>
                            {{/each}}
                        </div>
                        <hr>
                        <div class="list-group-item mb-2">
                            {{#with total_price}}
                            <div> {{text}}: {{value}} </div>
                            {{/with}}
                        </div>

                        <section>
                            {{#each button}}
                            <div class="btn mb-2 
                    {{#if isPrimary}}btn-primary text-light{{/if}}{{#if isOutline}}btn-outline-primary{{/if}} ">
                                {{text}}
                            </div>
                            {{/each}}
                        </section>
                        {{/with}}
                    </div>
                </div>
            </div>
        </div>


