{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div class="row ">
    <div class="col-12 ">
        {{#with main}}
        <main>
            <div class="card mb-5 p-3">
                <h2>{{> title data=summary.title big=true}}</h2>
                <p>
                    {{summary.text}}
                </p>
            </div>

            {{#with experience}}
            <div class="card mb-5 p-3">
                {{> title data=title big=false }}
                <div>
                    <p> {{text}} </p>
                </div>
            </div>
            {{/with}}
        </main>
        {{/with}}
    </div>
</div>
</div>
