{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with program}}

    {{> title data='Excursion:' big=true}}

    {{#with excursion}}
    <strong>Name:{{name}}</strong>
    <li>Location: {{location.city}} ({{location.country}}) </li>
    <li>Date: {{date}} </li>

    {{> title data='Program:'}}

    {{#each program}}
    <ul>
        <div>{{name}} -- {{type}} ({{duration}}h) </div>

        {{#with details}}

        <section>
            {{#with museum}}
            {{> title data='Museum'}}
            <ul>
                <li> {{name}} </li>
                {{#with location}}
                <li>
                    <address>{{address}}</address>
                </li>
                <li>{{city}} ({{country}})</li>
                {{/with}}

                {{> title data='Exhibits'}}
                {{#each exhibits}}
                <li>{{name}}
                    {{#if artist}} ({{artist}}) {{/if}}
                </li>
                <p>"{{description}}"</p>
                {{/each}}
            </ul>
            {{/with}}
        </section>

        <section>
            {{#with venue }}
            {{> title data='Venue'}}
            <ul>
                <li> {{name}} </li>
                {{#with location}}
                <li>
                    <address>{{address}}</address>
                </li>
                <li>{{city}} ({{country}})</li>
                {{/with}}
            </ul>
            {{/with}}

            <ul>
                {{> title data='Performers'}}
                {{#each performers}}
                <li>{{name}}</li>
                <p> {{type}}</p>
                {{/each}}
            </ul>
        </section>

        <ul>
            {{#with guide}}
            {{> title data='Guide'}}
            <li> {{name}}</li>
            <li>{{language}} ({{rating}})</li>
            {{/with}}
        </ul>
        {{/with}}
    </ul>

    {{/each}}
    {{/with}}
    {{/with}}
</div>



