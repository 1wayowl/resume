{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <section>
        <h2>{{name}}</h2>
        <h3>{{birthdate}} </h3>
        <h3>{{birthplace}} </h3>
        <h3>{{deathdate}} </h3>
        <h3>{{deathplace}} </h3>
        <h3>{{nationality}} </h3>
        <h3>{{occupation}} </h3>
        <div>
            {{> title data='Known_for:' big=false}}
            <ul>
                {{#each known_for}}
                <li> {{''}} </li>
                {{/each}}
            </ul>
        </div>
        <br>
        <div>
            {{> title data='Education:' }}
            <ul>
                {{#each education}}
                <li> {{degree}} </li>
                <li> {{field}} </li>
                <li> {{institution}} </li>
                <li> {{year}} </li>
                {{/each}}
            </ul>
        </div>
        <div>
            {{> title data='Notable_publications:' }}
            <ul>
                {{#each notable_publications}}
                <li>
                    <em>{{title}} ({{year}})</em><br> {{publisher}}
                </li>
                {{/each}}
            </ul>
        </div>
        <div>
            {{> title data='Partners:' }}
            <ul>
                {{#each partners}}
                <li>
                    <em>{{name}} {{relationship}} </em><br> ({{years}})
                </li>
                {{/each}}
            </ul>
        </div>
        <div>
            {{> title data='Awards:' }}
            {{#each awards}}
            <em>{{title}} ({{year}})</em><br>
            <p>"{{description}}" </p>
            {{/each}}
        </div>
        <br>
        <hr>

        <div>
            {{> title data='Influences:'}}
            <ul>
                {{#each influences}}
                <li> {{''}} </li>
                {{/each}}
            </ul>
        </div>
        <br>
        <div>
            {{> title data='Influenced:'}}
            <ul>
                {{#each influenced}}
                <li> {{''}} </li>
                {{/each}}
            </ul>
        </div>
        <div>
            {{> title data='Quotes:'}}
            {{#each quotes}}
            <li> <q>{{''}} </q> </li>
            {{/each}}
        </div>
        <div>
            {{> title data='Major_discoveries:' }}
            {{#each major_discoveries}}
            <em>{{title}} ({{year}})</em><br>
            <p>"{{description}}" </p>
            {{/each}}
        </div>
        <div>
            {{> title data='Contributions:' }}
            {{#with contributions}}
            <div><em>{{title}}</em></div>
            <p>"{{description}}"</p>
            <div>({{year}})</div> <br>
            <div> {{field}} </div>
            {{/with}}
        </div>
    </section>
</div>



