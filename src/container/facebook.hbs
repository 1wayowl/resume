{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <h1>{{name}}</h1>
    {{#each users}}



    <ul>
        {{id}}-<h4>{{name}}</h4>

        {{gender}}
        {{age}}
        <ul>
            <h3>Friends:</h3>

            {{#each friends}}
            <li>{{id}} - <b>{{name}}</b></li>
            Gender: {{gender}}
            Age: {{age}}

            <h5>Mutual_friends:</h5>
            {{#each mutual_friends}}
            <ul>
                <li>{{id}}-<b>{{name}}</b></li>
                Gender: {{gender}}
                Age: {{age}}
                <ul>{{#if mutual_friends}}
                    <h5>Mutual_friends:</h5>
                    {{#each mutual_friends}}
                    <li>{{id}}-<b>{{name}}</b></li>
                    Gender: {{gender}}
                    Age: {{age}}{{/each}}{{/if}}
                </ul>
            </ul>

            {{/each}}{{/each}}


            <h3>Groups:</h3>
            {{#each groups}}
            <li>{{id}}-<b>{{name}}</b></li>
            <p>{{description}} </p>


            <h6>Members:</h6>
            {{#each members}}
            <ul>
                <li>{{id}}-<b>{{name}}</b></li>
                Gender: {{gender}}
                Age: {{age}}
            </ul>

            {{/each}}{{/each}}

        </ul>
    </ul>

    <hr>

    {{/each}}
</div>



