<main class="p-5">

    <h1 class="mb-5"> {{header}} <img src="/svg/basket.svg"></h1>

    {{#with purchase}}

    <div class="nav nav-tabs ">
        {{#each tabs}}
        <div class="nav-link mx-2">
            <div class=" {{#if @first}}text-dark {{/if}} ">
                {{this }}
            </div>
        </div>
        {{/each}}
    </div>

    {{#with actionBlock}}
    <div class="col-12 mb-5">
        <div class="row">

            <div class="col-4 mb-5">
                <input class="form-control" placeholder="{{input.placeholder}}">
            </div>

            <div class="col-8 mb-5">
                {{#each buttons}}
                <a href="{{link}}" class="btn 
                    {{#if isSuccess}}btn-success {{/if}} {{#if isOutline}}btn-outline-success{{/if}} 
                    {{#if isDanger}}btn-outline-danger{{/if}} ">
                    {{text}}</a>
                {{/each}}
            </div>
        </div>
    </div>
    {{/with}}


    <div class="col-12 mb-5">
        {{#each itemList}}
        <div class="card">
            <div class="row">
                <div class="col-3">
                    <span>{{number}}</span>
                    <p>{{status}} </p>
                </div>
                <div class="col-2">
                    {{#with amount}}
                    {{title}} : <h4>{{value}}</h4>
                    {{/with}}
                </div>
                <div class="col-5 ">
                    {{#each images}}
                    <img src="https://picsum.photos/110/110" alt="product photo" width="110" height="110">
                    {{/each}}
                </div>
                <div class="col-2 pt-2">
                    {{#with button}}
                    <div><a href="{{link}}" class="btn mb-3   
                    {{#if isPrimary}}btn-primary text-light{{/if}} ">
                            {{text}}</a>
                    </div>
                    {{/with}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>




    {{/with}}

    <hr>

    {{#with userInfo}}
    <h2 class="mb-5">{{title}}</h2>
    <div class="card mb-5">
        {{#with profileData}}
        <h4 class="mx-2 mb-2 p-2">{{title}}</h4>
        <div class="card mx-2 mb-2 p-2">
            <div class="col-12 ">
                <div class="row">
                    {{#with fullName}}
                    <div class="col-4">
                        {{#with surname}}
                        <div>{{title}}</div>
                        <div>{{value}}</div>
                        {{/with}}
                    </div>
                    <div class="col-4">
                        {{#with name}}
                        <div>{{title}}</div>
                        <div>{{value}}</div>
                        {{/with}}
                    </div>
                    <div class="col-4">
                        {{#with middleName}}
                        <div>{{title}}</div>
                        <div>{{value}}</div>
                        {{/with}}
                    </div>
                    {{/with}}
                </div>
            </div>
        </div>

        <div class="card mx-2 mb-2 p-2">
            <div class="col-12 ">
                <div class="row">
                    {{#with otherInfo}}
                    <div class="col-4">
                        {{#with birthday}}
                        <div>{{title}}</div>
                        <div>{{value}}</div>
                        {{/with}}
                    </div>
                    <div class="col-4">
                        {{#with sex}}
                        <div>{{title}}</div>
                        <div>{{value}}</div>
                        {{/with}}
                    </div>
                    <div class="col-4">
                        {{#with language}}
                        <div>{{title}}</div>
                        <div>{{value}}</div>
                        {{/with}}
                    </div>
                    {{/with}}
                </div>
            </div>
        </div>

        {{/with}}


        <div class="card mx-2 mb-2 p-2 ">

            <div class="row ">
                {{#each buttons}}
                {{#if isPrimary}}<div class="col-4">
                    <button href="{{link}}" class="btn 
                    btn-primary ">
                        {{text}}
                    </button>
                </div>
                {{/if}}
                {{#if isSecondary}}
                <div class="col-4">
                    <button href="{{link}}" class="btn
                    btn-outline-secondary">
                        {{text}}
                    </button>
                </div>
                {{/if}}
                {{#if isDanger}}
                <div class="col-4">
                    <button href="{{link}}" class="btn
                    btn-outline-danger">
                        {{text}}
                    </button>
                </div>
                {{/if}}
                {{/each}}
            </div>

        </div>



        <div class="card mx-2 mb-2 p-2 ">
            <div class="col-12">
                {{#with recipients}}

                <h3 class="mb-3">{{title}} </h3>
                <div class="row">
                    {{#each users}}
                    <div class="col-4">
                        <div class="card p-2 ">
                            <div>{{name}} </div>
                            <div>{{phone}}</div>
                            <div class="btn-sm"> {{#with button}}
                                <a href="{{link}}" class="btn btn-primary"> {{text}} </a>
                                {{/with}}
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>

                {{/with}}
            </div>
        </div>

        <div class="card mx-2 mb-2 p-2 ">
            <div class="col-12">
                {{#with contacts}}

                <h3 class="mb-3">{{title}} </h3>
                <div class="row">
                    {{#each contactData}}
                    <div class="col-4">
                        <div class="card p-2 ">
                            <div>{{title}} </div>
                            <div>{{value}}</div>
                            <div class="btn-sm"> {{#with button}}
                                <a href="{{link}}"
                                    class="{{#if isPrimary}} btn btn-primary{{/if}}{{#if isSecondary}} btn btn-outline-secondary{{/if}}{{#if isDanger}} btn btn-danger{{/if}}">
                                    {{text}} </a>
                                {{/with}}
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>

                {{/with}}
            </div>
        </div>


    </div>
    {{/with}}


</main>